@layout LoginLayout
@page "/login"
@inject NavigationManager UriHelper

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
     <link rel="stylesheet" href="/css/bootstrap/all.min.css">
  <link rel="stylesheet" href="style.css">
  <title>CCP Login</title>
</head>

<body>

  <div class="form_login_form">

    <div class="parent">

      <div class="div1">
        <img src="login-img/LoginImage6L-01.jpg" alt="Client Care Pro Logo1">
      </div>

      <div class="div2">
        <div class="form_login_logo">
          <img src="login-img/CCP-Logo.png" alt="Client Care Pro Logo">
        </div>

        <h2>INLOGGEN</h2>

        <form>
          <div class="textbox_login_email ">
            <input type="email" name="email" placeholder="Email"
              class="email white col-7 col-md-4 col-lg-7 ml-3 form-control" id="email"
              pattern="[a-z0-9._%+-]+ [a-z0-9.-]+\.[a-z]{2,4}$" required>
          </div>
          <div class="textbox_login_password">
           <input type="password" placeholder="Wachtwoord" required>
            <i class="fa-solid fa-eye" id="eye"></i>
            <div class="invalid-feedback"></div>
          </div>
          <div class="dropdown_login_domain">
            <select class="form-select" id="validationTooltip04" required>
              <option selected disabled value="">Selecteer domein</option>
              <option value="1">1234</option>
              <option value="2">5678</option>
              <option value="3">4321</option>
            </select>
            <div id="validationServer03Feedback" class="invalid-feedback">
            </div>
          </div>
          <button class="button_login_login" @onclick=@Navigate>INLOGGEN</button>
          <div class="link_login_loginHelp">
            <a href="url">Wachtwoord vergeten?</a>
          </div>
        </form> 
      </div>

      <div class="div3">
        <img src="login-img/LoginImage6R-01.jpg" alt="Client Care Pro Logo1">
      </div>
    </div>
  </div>
</body>
</html>


@code {
    void Navigate()
    {
        UriHelper.NavigateTo("/");
    }

}
